<%= simple_form_for @item do |f| %>
<%= select_tag(:catgory_id, options_for_select(@categories), :prompt => "Select a category") %>
<%= f.input :title, required:true %>
<%= f.input :description , required:true,  input_html: { class: 'red' } %>
<%= f.input :price, required:true, input_html: {class: 'skyblue'} %>
<%= f.button :submit, name: "createItem"%>

<% end %>
